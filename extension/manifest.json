{
  "manifest_version": 3,
  "name": "JobSnap",
  "version": "0.1.0",
  "description": "Download BDJobs job circulars as Markdown",
  "permissions": ["activeTab", "downloads", "scripting"],
  "host_permissions": ["https://bdjobs.com/*", "https://*.bdjobs.com/*"],
  "action": {
    "default_title": "JobSnap",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    }
  },
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://bdjobs.com/jobs/details/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["core/*.js"],
      "matches": ["https://bdjobs.com/*", "https://*.bdjobs.com/*"]
    }
  ]
}
