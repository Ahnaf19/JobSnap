{
  "manifest_version": 3,
  "name": "JobSnap",
  "version": "0.1.0",
  "description": "Download BDJobs job circulars as Markdown",
  "permissions": ["activeTab", "downloads", "scripting"],
  "host_permissions": ["https://bdjobs.com/*", "https://*.bdjobs.com/*"],
  "action": {
    "default_title": "JobSnap",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://bdjobs.com/jobs/details/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["core/*.js"],
      "matches": ["https://bdjobs.com/*", "https://*.bdjobs.com/*"]
    }
  ]
}
